<script>
  // Back to Top Functionality
  document.addEventListener('DOMContentLoaded', function() {
    var myButton = document.getElementById("back-to-top-btn");

    myButton.addEventListener('click', function() {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  });
</script>
